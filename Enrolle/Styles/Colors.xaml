<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <SolidColorBrush x:Key="Dark" Color="#071013"/>
    <SolidColorBrush x:Key="Light" Color="#DFE0E2"/>
    <SolidColorBrush x:Key="Medium" Color="#AAAAAA"/>

    <SolidColorBrush x:Key="Main" Color="#EB5160"/>
    <SolidColorBrush x:Key="MainLight" Color="#FFFF8F9A"/>

    <DropShadowEffect x:Key="Shadow" BlurRadius="10" Direction="-90" ShadowDepth="3" Opacity="0.5"/>

</ResourceDictionary>